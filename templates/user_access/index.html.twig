   </div> #}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Prod_dimensions</th>
                <th>Short_description</th>
                <th>discount</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {# <span class="is-hidden">secret</span>  #}
        {% for product in products %}
     
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                {% if product.discount > 0 %}
                <td><p style="text-decoration: line-through;">{{ product.price }} &#8364;</p>
                <p>{{ product.price - (product.price * product.discount) }} &#8364;</p></td> 
                {% else %}
                    <td>{{ product.price }} &#8364;</td> 
                {% endif %}
                <td>{{ product.type }}</td>
                <td>{{ product.FkBrand.name }}</td>
                <td>{{ product.prodDimensions }}</td>
                <td>{{ product.shortDescription }}</td>
                
                
                <td>{% if product.discount > 0 %}
                    {{ product.discount }}
                    {% else %}
                        no discount
                    {% endif %}</td>
                <td><img src="{{ asset('pictures/' ~ product.picture) }}" alt="" height="70px"></td>
                
                <td>
                
                    <a href="{{ path('app_user_access_show', {'id': product.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_user_access_addtocart', {'id': product.id}) }}" class="btn btn-success">Add To Cart</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
            </table>
        {% endfor %}
       
       
  </tbody>
  </table>
 
{% for product in products %}
    <div class="col-md-4">
      <div class="box">
        <h3>{{ product.name }}</h3>
        <img src="{{ asset('pictures/' ~ product.picture) }}" class="card-img-top" alt="{{ product.name }}">
        <h4>{{ product.shortDescription }}</h4>
        <p>Price: {{ product.price }} &#8364;</p>
        {% if product.discount > 0 %}
          <p>Discounted Price: {{ product.price - (product.price * product.discount) }} &#8364;</p>
        {% endif %}
        <a href="{{ path('app_user_access_show', {'id': product.id}) }}" class="btn btn-primary">Details</a>
        <a href="{{ path('app_user_access_addtocart', {'id': product.id}) }}" class="btn btn-success">Add To Cart</a>
      </div>
    </div>
{% endfor %}





