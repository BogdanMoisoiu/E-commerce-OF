{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
            <tr>
                <th>Brand</th>
                {# for admin #}
                <td><a href="{{ path('app_brand_show', {'id': brand.id}) }}">{{ brand.name }}</a></td>
                {# for users #}
                {# <td><a href="{{ path('app_user_access_brand', {'id': brand.id}) }}">{{ brand.name }}</a></td> #}
            </tr>
            <tr>
                <th>Prod_dimensions</th>
                <td>{{ product.prodDimensions }}</td>
            </tr>
            <tr>
                <th>Short_description</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ product.color }}</td>
            </tr>
            <tr>
                <th>Power_max</th>
                <td>{{ product.powerMax }}</td>
            </tr>
            <tr>
                <th>Power_source</th>
                <td>{{ product.powerSource }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ product.availability ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Quantity_left</th>
                <td>{{ product.quantityLeft }}</td>
            </tr>
            <tr>
                <th>Material</th>
                <td>{{ product.material }}</td>
            </tr>
            <tr>
                <th>Special_features</th>
                <td>{{ product.specialFeatures }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ product.style }}</td>
            </tr>
            <tr>
                <th>Sale</th>
                <td>{{ product.sale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ product.picture }}" alt="" height="70px"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
