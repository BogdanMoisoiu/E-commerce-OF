{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %} 
        {{ parent() }}
        <link rel="stylesheet" href="{{asset('css/register.css')}}">
    {% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.first_name, {
            label: 'First name'
        }) }}
        {{ form_row(registrationForm.last_name, {
            label: 'Last name'
        }) }}
        {{ form_row(registrationForm.date_of_birth, {
            label: 'Date of birth'
        }) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.phone_number, {
            label: 'Phone number'
        }) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.street) }}
        {{ form_row(registrationForm.str_number_ap_number, {
            label: 'Street number/Appartment number'
        }) }}
        {{ form_row(registrationForm.post_code, {
            label: 'Post code'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
