{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block stylesheets %} 
        {{ parent() }}
        <link rel="stylesheet" href="{{asset('css/cart.css')}}">
    {% endblock %}

{% block body %}
    <h1>Cart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_time_stamp</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.dateTimeStamp ? cart.dateTimeStamp|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cart.status }}</td>
                <td>
                    <a href="{{ path('app_cart_show', {'id': cart.id}) }}">show</a>
                    <a href="{{ path('app_cart_edit', {'id': cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cart_new') }}">Add To Cart</a>
{% endblock %}
