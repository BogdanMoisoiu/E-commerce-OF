{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<h5>categories</h5>

    {% for product in products %}
    <a href="{{ path('app_static_category', {'type':product.type}) }}">{{ product.type }}</a>
    {% endfor %}

    <h1>Product index</h1>

  
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Short_description</th>
                <th>discount</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for product in products %}
       
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td> 

                {% if product.discount > 0 %}
                <td><p style="text-decoration: line-through;">{{ product.price }} &#8364;</p>
                <p>{{ product.price - (product.price * product.discount) }} &#8364;</p></td> 
                {% else %}
                    <td>{{ product.price }} &#8364;</td> 
                {% endif %}
   
                <td>{{ product.type }}</td>
                <td>{{ product.FkBrand.name }}</td>
                <td>{{ product.shortDescription }}</td>
                <td>{{ product.discount}}</td>
                <td><img src="{{ asset('pictures/' ~ product.picture) }}" alt="" height="70px"></td>
                <td>
                    <a href="{{ path('app_static_show', {'id': product.id}) }}">show</a>

                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
